<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.1 Transitional//EN">
<html>
  <head>
    <title>Anzeigeboard des BKSD</title>
    <base href="<%= appBasePath %>">
     <!-- Einbindung der Javascript-Bibliothek JQUERY von GOOGLE -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <!-- Einbindung der Stylesheet-Bibliothek BOOTSTRAP für die automatisierte Menüsteuerung -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
       <!-- Lightweight client-side loader that feature-detects and load polyfills only when necessary -->
    <script src="https://cdn.jsdelivr.net/npm/@webcomponents/webcomponentsjs@2/webcomponents-loader.min.js"></script>
     <!-- Load the element definition for markdown-->
     <script type="module" src="https://cdn.jsdelivr.net/gh/zerodevx/zero-md@2/dist/zero-md.min.js"></script>
    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="<%= appBasePath %>style.css" />
          <!-- import the font montserrat -->
    <link rel="stylesheet" href="<%= appBasePath %>fonts.css" />
    <!-- import the webpage's config -->
    <script src="config.js" defer></script>
    <!-- import the webpage's javascript file -->
    <script src="script.js" defer></script>
    <link rel="icon" type="image/png" sizes="16x16" href="media/favicon.png">
  </head>
  <body>
    <div id="logo">
     <img class="header-image" alt="logo">
    </div>
    <div id="warnungsbereich" class="marquee">
      <span id="warning-content">
         <zero-md id="warning" src="warning-content.md">
           <template>
               <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
              <link rel="stylesheet" href="markdown-style.css" />
           </template>
         </zero-md>
    </span>
    </div>
    <div id="clock"></div>
    <div id="kopfbereich">
      <zero-md id="header" src="header.md">
        <template>
            <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
           <link rel="stylesheet" href="markdown-style.css" />
        </template>
      </zero-md>
    </div>
    <!-- Ende kopfbereich -->
    <div id="textbereich">
      <div class="content-block">
      <table style="width: 100%; table-layout: fixed;" id="full_size_table">
        <tr>
          <td width="100%" style="border-right:1px solid #000;">
            <zero-md id="full_size_1" class="fade-in_full" src="full_size_1.md">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
            <zero-md id="full_size_2" src="full_size_2.md" class="fade-out_full">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
            <zero-md id="full_size_3" src="full_size_3.md" class="fade-out_full">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
          </td>
        </tr>
      </table>
      <table id="left_right_table">
        <tr>
          <td width="50%" style="border-right:1px solid #000;">
            <zero-md id="links_1" class="fade-in" src="links_1.md">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
            <zero-md id="links_2" src="links_2.md" class="fade-out">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
          </td>
          <td width="50%">
            <zero-md id="rechts_1" class="fade-in" src="rechts_1.md">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
            <zero-md id="rechts_2" src="rechts_2.md" class="fade-out">
              <template>
                  <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
                 <link rel="stylesheet" href="markdown-style.css" />
              </template>
            </zero-md>
            <div id="rss-feed">
                <% feed.forEach(feedentry => { %>
                 <a href='<%= feedentry.link %>'>
                  <div class="post">
                     <%= feedentry.publishAtFormatted %> - <%= feedentry.title %>
                     <%if (feedentry.thumbnail) { %>
                       <img style="float:right;width:200px;" src='<%= feedentry.thumbnail.url %>' alt="Feed">
                     <% } %>
                       <p><%= feedentry.content %></p>
                   </div>
                 </a>
                <% }); %>
            </div>
          </td>
        </tr>
        </table>
      </div><!-- Ende content-block -->

    </div><!-- Ende textbereich -->
     <div id="fussbereich">
      <zero-md id="footer" src="footer.md">
        <template>
            <!-- Load external stylesheets with a `<link rel="stylesheet">` tag -->
           <link rel="stylesheet" href="markdown-style.css" />
        </template>
      </zero-md>
     </div>
    <!-- Ende fussbereich -->

    <script>
      $(window).on("load", function () {
        // load_content("fussbereich", "content-footer.html");
        // load_content("kopfbereich", "content-header.html");
      });
    </script>
   </body>
</html>
